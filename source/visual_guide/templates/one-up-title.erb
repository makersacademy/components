      <p class="body title-block__body">
        A title, used to separate sections. Spans the entire screen. Use to break up multiple backgrounded blocks.
      </p>
    </div>

  </div>

  <h3>Modules</h3>
  <div class="example">

    <!-- BEGIN examples -->

    <span class="label">Main title</span>

    <%= partial :"templates/one-up-title", locals: {
      titles: [
        {text: "Title"}
      ]
    } %>

    <span class="label">Optional Leader &amp; Subtitles</span>

    <%= partial :"templates/one-up-title", locals: {
      titles: [
        {modifiers: "leader", text: "Leader"}, # optional
        {text: "Title"},
        {modifiers: "subtitle", text: "Subtitle"} # optional
      ]
    } %>

    <span class="label">Just Subtitle</span>

    <%= partial :"templates/one-up-title", locals: {
      titles: [
        {modifiers: "subtitle", text: "Subtitle"} # optional
      ]
    } %>

    <!-- END examples -->

  </div>

