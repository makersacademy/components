	<body>

		<div class="container">

			<div class="title-block">
				<h1 class="title title-block__title">CTA Group</h1>
				<h3 class="opt-title opt-title--below title-block__subtitle">group</h3>
				<p class="body title-block__body">
					Group container for CTA configurations.
				</p>
			</div>

			<h3>Modules</h3>
			<div class="example">
				<!-- BEGIN examples -->

				<span class="label">Single</span>
				<%= partial "components/groups/cta-block", locals: {
						ctas: [
							{
								text: "See more",
								link: "#",
								modifiers: ["horizontal"]
							}
						]
					} %>

				<span class="label">Single Left-aligned</span>
				<%= partial "components/groups/cta-block", locals: {
						modifiers: ["left"],
						ctas: [
							{
								text: "See more",
								link: "#",
								modifiers: ["horizontal"]
							}
						]
					} %>

				<span class="label">Single Right-aligned</span>
				<%= partial "components/groups/cta-block", locals: {
						modifiers: ["right"],
						ctas: [
							{
								text: "See more",
								link: "#",
								modifiers: ["horizontal"]
							}
						]
					} %>

				<span class="label">Inline</span>
				<%= partial "components/groups/cta-block", locals: {
					modifiers: ["inline"],
					ctas: [
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						},
						{
							text: "Apply now",
							link: "#",
							modifiers: ["vertical"]
						},
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						}
					]
				}	%>

				<span class="label">Stacked</span>
				<%= partial "components/groups/cta-block", locals: {
					modifiers: ["stacked"],
					ctas: [
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						},
						{
							text: "Apply now",
							link: "#",
							modifiers: ["vertical"]
						},
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						},
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						}
					]
				}	%>

				<span class="label">Bar</span>
				<%= partial "components/groups/cta-block", locals: {
					modifiers: ["bar"],
					ctas: [
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						},
						{
							text: "Apply now",
							link: "#",
							modifiers: ["vertical"]
						},
						{
							text: "See more",
							link: "#",
							modifiers: ["horizontal"]
						}
					]
				}	%>

				<!-- END examples -->
			</div>

			<div class="content">
				<div class="usage">

				</div>
