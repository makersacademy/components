<div class="container">

	<h1>'Title' Block</h1>
	<h2>group</h2>
	<p>Title and some copy. Think 'informative' messages.</p>

	<h3>Modules</h3>
	<div class="example">

		<!-- BEGIN examples -->

		<span class="label">Center</span>
		<%= partial 'components/groups/title-block', locals: {
			titles: [
				{
					text: lorem.words(2)
				}
			],
			body: {
				text: lorem.sentences(4)
			}
		} %>

		<span class="label">Left</span>
		<%= partial 'components/groups/title-block', locals: {
			modifiers: ["left"],
			titles: [
				{
					text: lorem.words(2)
				}
			],
			body: {
				text: lorem.sentences(4),
			}
		} %>

		<span class="label">Right</span>
		<%= partial 'components/groups/title-block', locals: {
			modifiers: ["right"],
			titles: [
				{
					text: lorem.words(2),
				}
			],
			body: {
				text: lorem.sentences(4),
			}
		} %>

		<span class="label">Opt (shown right-aligned)</span>
		<%= partial 'components/groups/title-block', locals: {
			modifiers: ["right"],
			titles: [
				{
					text: "Eat our",
					modifiers: ["leader"]
				},
				{
					text: "Meat"
				},
				{
					text: "It's delicious",
					modifiers: ["subtitle"]
				}
			],
			body: {
				text: lorem.sentences(4),
				modifiers: []
			}
		} %>

		<span class="label">With Image</span>
		<%= partial 'groups/title-block', locals: {
			image: {
				modifiers: "portrait",
				src: "http://placehold.it/200x323&text=Hi",
				alt: "A gray box with the text 'Hi'"
			},
			titles: [
				{
					text: lorem.word
				}
			],
			body: {
				text: lorem.sentences(4),
				modifiers: []
			}
		} %>

		<span class="label">With Blockquote</span>
		<%= partial "groups/title-block", locals: {
			titles: [
				{ 
					text: lorem.words(1)
				}
			],
			body: { text: lorem.sentences(3) },
			blockquote: { text: lorem.sentences(3) }
		} %>

		<!-- END examples -->

	</div>

	<div class="content">
		<div class="usage">
			...How to use...
		</div>
		<div class="code">
			<div class="html">
				<pre>

				</pre>
			</div>
			<div class="css">
				<pre></pre>
			</div>
		</div>
	</div>

</div>

