<div class="page">

	<div class="container">

		<div class="title-block">
			<h1 class="title title-block__title">Input</h1>
			<h3 class="opt-title opt-title--below title-block__subtitle">atom</h3>
			<p class="body title-block__body">
				For allowing users to enter values.
			</p>
		</div>

		<h3>Modules</h3>
		<div class="example">

			<!-- BEGIN examples -->

			<span class="label">Text Input</span>
			<%= partial :"atoms/input", locals: {
					modifiers: "text",
					input_type: "text", # if not supplied, defaults to "text"
					name: "capture",
					placeholder: "Capture something..." # if not supplied, defaults to ""
				} %>

			<span class="label">Telephone Input</span>
			<input class="input input--text" type="tel" name="capture-tel" placeholder="Capture telephone..." />

			<span class="label">Email Input</span>
			<input class="input input--text" type="email" name="capture-email" placeholder="Capture email address..." />

			<span class="label">Radio Input</span>
			<input class="input input--radio" type="radio" name="capture-radio" value="Radio 1..." />
			<input class="input input--radio" type="radio" name="capture-radio" value="Radio 2..." />

			<span class="label">Textarea Input</span>
			<textarea class="input input--textarea" name="capture-textarea" placeholder="Capture long text..."></textarea>

			<span class="label">Select Input</span>
			<select class="input input--select" name="capture-select">
				<option value="One" selected>Option 1</option>
				<option value="Two">Option 2</option>
			</select>


			<!-- END examples -->
		</div>

		<div class="content">
			<div class="usage">
				...How to use...
			</div>
			<div class="code">
				<div class="html">
					<pre>

					</pre>
				</div>
				<div class="css">
					<pre></pre>
				</div>
			</div>
		</div>

	</div>

</div>
