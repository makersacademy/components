<% # Includes _image-block group, and _title, _body, _opt-title atoms %>
<% component = "title-block" %>

<div class="<%= component_classes(component, locals) %>">

  <% titles.each do | title | %>

    <%= partial 'atoms/title', locals: {
      parent: component,
      text: title[:text],
      modifiers: title[:modifiers]
    } %>

  <% end %>


  <%= partial 'atoms/body', locals: {
    parent: component,
    text: body[:text],
    modifiers: body[:modifiers]
  } %>

</div>


